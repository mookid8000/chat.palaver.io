extends layout
block content
    style
        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
    form.form-signin(action="/register", method="post")
        h2.form-signin-heading Please sign in
        input.input-block-level(type="text", name="username", placeholder="Desired username")
        input.input-block-level(type="password", name="password", placeholder="Desired password")
        input.input-block-level(type="password", name="confirmPassword", placeholder="Repeat desired password")
        button.btn.btn-large.btn-primary(type="submit") Register
    h4.text-error(style="text-align: center")= message
